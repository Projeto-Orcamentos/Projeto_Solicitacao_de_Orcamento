<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tech Inova</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top bg-primary">
        
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tech Inova", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Página Inicial", "Index", "Home", new { area = "" }, new { @class = "text-white" })</li>
                    <li>@Html.ActionLink("Soluções", "Solucoes", "Home", new { area = "" }, new { @class = "text-white" })</li>
                    <li>@Html.ActionLink("Contrate", "Index", "clientes", new { area = "" }, new { @class = "text-white" })</li>
                    <li>@Html.ActionLink("Contatos", "Contatos", "Home", new { area = "" }, new { @class = "text-white" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <footer class="foot">
            <hr />
            <p>&copy; @DateTime.Now.Year - Tech Inova</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
